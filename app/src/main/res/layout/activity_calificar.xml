<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2F4AB"
    tools:context=".View.Calificar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2F4AB"
        tools:context=".View.Calificar">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar36"
            android:layout_width="416dp"
            android:layout_height="85dp"
            android:layout_gravity="bottom"
            app:backgroundTint="#A3E854"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomAppBar35" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar35"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="#84E811"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Calificar"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottomAppBar35" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="369dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:hint="Califica a los usuarios, JUNTOS contra la DESINFORMACIÓN"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottomAppBar36" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar37"
            android:layout_width="365dp"
            android:layout_height="470dp"
            android:layout_gravity="bottom"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomAppBar36"
            app:layout_constraintVertical_bias="0.48" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Comentario:"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/bottomAppBar37"
            app:layout_constraintTop_toBottomOf="@+id/textView34" />

        <TextView
            android:id="@+id/Usu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/bottomAppBar37"
            app:layout_constraintTop_toTopOf="@+id/bottomAppBar37" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="Puntuación:"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/bottomAppBar37"
            app:layout_constraintTop_toBottomOf="@+id/Usu" />

        <EditText
            android:id="@+id/puntuacion"
            android:layout_width="192dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Del 1 al 5"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintStart_toEndOf="@+id/textView34"
            app:layout_constraintTop_toBottomOf="@+id/Usu" />

        <EditText
            android:id="@+id/comentario"
            android:layout_width="347dp"
            android:layout_height="255dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar37"
            app:layout_constraintStart_toStartOf="@+id/bottomAppBar37"
            app:layout_constraintTop_toBottomOf="@+id/textView35"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#84E811"
            android:onClick="calificar"
            android:text="Subir"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/bottomAppBar37"
            app:layout_constraintStart_toStartOf="@+id/bottomAppBar37"
            app:layout_constraintTop_toBottomOf="@+id/comentario" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
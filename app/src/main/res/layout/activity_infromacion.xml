<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2F4AB"
    tools:context=".View.Infromacion">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2F4AB"
        tools:context=".View.Infromacion">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="395dp"
            android:layout_height="445dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/datos">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBF9F9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="315dp"
                    android:layout_height="32dp"
                    android:text="Correo:"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/datos"
                    android:layout_width="352dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="315dp"
                    android:layout_height="32dp"
                    android:text="Nombre:"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Nombre"
                    android:layout_width="352dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="315dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Pais:"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Pais"
                    android:layout_width="352dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="315dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="12dp"
                    android:text="Genero:"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Genero"
                    android:layout_width="352dp"
                    android:layout_height="40dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="315dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Usuario:"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/TipoUsuario"
                    android:layout_width="352dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="24sp" />

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar9"
            android:layout_width="411dp"
            android:layout_height="71dp"
            android:layout_gravity="bottom"
            app:backgroundTint="#84E811"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="128dp"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:hint="PIGEON"
            android:textColor="#F6F0F0"
            android:textColorHint="#F6F2F2"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="@+id/bottomAppBar9"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/datos"
            android:layout_width="411dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            app:backgroundTint="#A3E854"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomAppBar9" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="356dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:hint="Tu Información"
            android:textColorHint="#FDF9F9"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="@+id/datos"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomAppBar9" />

        <Button
            android:id="@+id/foto"
            android:layout_width="49dp"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FFFCFC"
            android:onClick="FOTO"
            app:layout_constraintEnd_toEndOf="@+id/bottomAppBar9"
            app:layout_constraintTop_toTopOf="@+id/bottomAppBar9" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#4CAF50"
            android:hint="Borrar Cuenta"
            android:onClick="BorrarCuenta"
            android:textColorHint="#F8F0F0"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4CAF50"
            android:hint="Cerrar Sesión"
            android:onClick="Salir"
            android:textColorHint="#F8F0F0"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/button7"
            tools:layout_editor_absoluteX="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>